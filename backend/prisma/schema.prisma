generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cabelereira {
  id         Int         @id @default(autoincrement())
  nome       String
  email      String       @unique
  senha      String
  horarios   Horario[]    // Relacionamento com os horários disponíveis
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
}

model Cliente {
  id         Int         @id @default(autoincrement())
  nome       String
  email      String       @unique
  senha      String
  agendamentos Agendamento[] // Relacionamento com os agendamentos feitos
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
}

model Horario {
  id             Int         @id @default(autoincrement())
  dataHora       DateTime
  disponivel     Boolean      @default(true) // Indica se o horário está disponível
  cabelereiraId  Int
  cabelereira    Cabelereira  @relation(fields: [cabelereiraId], references: [id])
  agendamento    Agendamento?
}

model Agendamento {
  id             Int         @id @default(autoincrement())
  horarioId      Int         @unique
  horario        Horario     @relation(fields: [horarioId], references: [id])
  clienteId      Int
  cliente        Cliente     @relation(fields: [clienteId], references: [id])
  observacao     String?
  createdAt      DateTime     @default(now())
}
